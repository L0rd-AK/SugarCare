{
  "name": "sugarcare",
  "displayName": "SugarCare - Smart Diabetes Management",
  "version": "1.0.0",
  "description": "A modern diabetes management app for tracking blood sugar levels with AI insights and community support",
  "keywords": ["diabetes", "health", "blood-sugar", "medical", "tracking", "react"],
  "author": "L0rd-AK",
  "license": "MIT",
  "homepage": "https://github.com/L0rd-AK/SugarCare",
  "repository": {
    "type": "git",
    "url": "https://github.com/L0rd-AK/SugarCare.git"
  },
  "bugs": {
    "url": "https://github.com/L0rd-AK/SugarCare/issues"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host --open",
    "start": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host --open",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "clean": "rm -rf dist",
    "deploy": "npm run build && npm run preview"
  },
  "dependencies": {
    "chart.js": "^4.4.9",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "firebase": "^10.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
